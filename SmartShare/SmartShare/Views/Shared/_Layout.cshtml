<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Smart Share</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        @* wrapper div for header portion *@
        <div class="content-wrapper">
            @* login and registration links *@
            <section id="login">
                @Html.Partial("_LoginPartial")
            </section>
            
            @* Website Titles *@
            <div>
                <p class="site-title">Smart Share</p>
            </div>
            
            @* Website navigation *@
            <div id="search">
                <input type="text" />
                <input type="button" name="Search" value="Search" />
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    @* main body - content of each page will be loaded here *@
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="main-content">
            @RenderBody()
        </section>
    </div>

    @* Website footer *@
    <footer>
        <div class="content-wrapper">
            <p>&copy; @DateTime.Now.Year - Smart Share</p>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
